<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">

	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from notice
			where no=#{no}
		]]>
	</delete>

   <!-- 하나 불러오기 -->
   <select id="selectOne" parameterType="int" resultType="com.javaex.vo.NoticeVo">
      <![CDATA[ 
        select  no,
				name,
		        title,
		        content,
		        reg_date regDate
		from notice
		where no=#{no}
      ]]>
   </select>

   <!-- 전체 리스트 -->
   <select id="selectList" resultType="com.javaex.vo.NoticeVo">
      <![CDATA[ 
        select  no,
				name,
		        title,
		        content,
		        reg_date regDate
		from notice
		order by no desc
      ]]>
   </select>
   
</mapper>
