<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">

	<!-- 전체 글갯수 -->
	<select id="selectTotalCnt" resultType="int">
		<![CDATA[
			select count(*) count
			from notice
		]]>
	</select>

	<!-- 전체리스트가져오기 리스트(검색X,페이징O)-->
	<select id="selectList2" parameterType="map" resultType="com.javaex.vo.NoticeVo">
		<![CDATA[
			select  no,
					name,
			        title,
			        content,
			        reg_date regDate,
			        count(*) over() total
			from notice
			order by no desc
			limit #{startRowNo}, #{listCnt}
		]]>
	</select>

	<!-- 수정 -->
	<update id="update" parameterType="com.javaex.vo.NoticeVo">
		<![CDATA[
			update notice
			set title=#{title},
				content=#{content}
			where no=#{no}
		]]>
	</update>

	<!-- 등록 -->
	<insert id="insert" parameterType="com.javaex.vo.NoticeVo">
		<![CDATA[
			insert into notice
			values(null, #{name}, #{title}, #{content}, date)
		]]>
	</insert>

	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from notice
			where no=#{no}
		]]>
	</delete>

   <!-- 하나 불러오기/읽기, 수정 -->
   <select id="selectOne" parameterType="int" resultType="com.javaex.vo.NoticeVo">
      <![CDATA[ 
        select  no,
				name,
		        title,
		        content,
		        reg_date regDate
		from notice
		where no=#{no}
      ]]>
   </select>

   <!-- 전체 리스트 -->
   <select id="selectList" resultType="com.javaex.vo.NoticeVo">
      <![CDATA[ 
        select  no,
				name,
		        title,
		        content,
		        reg_date regDate,
		        count(*) over() total
		from notice
		order by no desc
      ]]>
   </select>
   
</mapper>
